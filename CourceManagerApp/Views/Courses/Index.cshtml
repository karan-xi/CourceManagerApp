@model IEnumerable<CourceManagerApp.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Instructor</th>
            <th>Start Date</th>
            <th>Room Number</th>
            <th># Of Students</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Instructor</td>
                <td>@course.StartDate.ToShortDateString()</td>
                <td>@course.RoomNumber</td>
                <td>@course.Students.Count()</td>
                <td><p><a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning">Edit</a>| <a asp-action="Manage" asp-route-id="@course.Id" class="btn btn-warning">Manage</a></p></td>
            </tr>
        }
    </tbody>
</table>

<p><a class="btn btn-primary" href="/Courses/Create">Add New Course</a></p>
